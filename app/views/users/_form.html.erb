
<%= render "shared/errors", obj: @user %>
<%= form_with(model: @user, local: true) do |f| %>

	<%= f.label :user_name %>
	<%= f.text_field :user_name %>
	<br/>
	<br/>

	<%= f.label :email %>
	<%= f.email_field :email %>
	<br/>
	<br/>

	<%= f.label :password %>
	<%= f.password_field :password %>
	<br/>
	<br/>

	<%= f.submit (@user.new_record? ? "signup" : "update") %>
<% end %>